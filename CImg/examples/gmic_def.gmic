  -v - -r 100%,100%,100%,3 -repeat @#
    -s[-1] c --sin[-1] --cos[-2] -*[-2,-1] [-4] -a[-5,-2,-1] c -rm[-1,-2]
  -mv[-1] 0 -done -v +

