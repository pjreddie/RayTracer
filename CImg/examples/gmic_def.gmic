lab2lch :
  -e[^-1] "Convert image$? from Lab to Lch color bases."
  -v - -r 100%,100%,100%,3 -repeat @#
    -s[-1] c --sqr[-1,-2] -+[-1,-2] -sqrt[-1] --atan2[-3] [-2] -rm[-3,-4] -a[-3--1] c
  -mv[-1] 0 -done -v +

#@gmic lch2lab
