#@gimp : sep = separator(), note = note("<small>Author : <i>David Tschumperl&#233;</i>.      Last update : <i>2010/12/29</i>.</small>")
gimp_linear_gradient :
  -repeat @#
    ({w},{h}) -rm[-2]
    ($1^$2^$3^$4) ($5^$6^$7^$8)
    -if $9 -rv[-2,-1] -endif
