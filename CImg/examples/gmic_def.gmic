      -select_color[-1] $2%,$color
      -blur[-1] $3%
      -if $9 -*[-1] -1 -+[-1] 1 -endif
      -to_rgba[-2] -s[-2] c -*[-2,-1] -a[-4--1] c
    -else
      -_gimp_select_color[-1] $1
      -select_color[-1] $2%,$color
      -blur[-1] $3
      -if $9 -*[-1] -1 -+[-1] 1 -endif
